<!--   TOP SKILLS NEEDED DROPDOWN BOXES   -->
<!-- Top Skills Needed Job Title Form -->
<h3>Top Skills Needed</h3>
<a name="tsn_form"></a>
<form name="tsn_jobTitle" action="/tsn_jobTitle" method="POST">
  <div class="container">
    <h5>Top Skills Needed by Job Title</h5>
    <div class="row">
      <div class="four columns">
        <label for="jobsearch">Search by Job</label>
        <select>
          <option selected disabled>Choose one</option>
          {{#each job}}
          <option value={{JobsName}}>{{JobsName}}</option>
          {{/each}}
          <option value="Hunky Guy">Hunky Guy</option>
        </select>
      </div>
    </div>
     <div class="row">
      <div class="twelve columns">
        <button type="submit" class="button-primary">Submit</button>
      </div>
    </div>
  </div>
</form>  

<!--  THIS WILL ONLY DISPLAY IF THE PAGE RECEIVES "RESULT" FROM THE EXPRESS SERVER UPON LOAD -->
<!-- Results Table for Top Skills Needed by Job Title -->
{{#if result}}
<div class="container">
  <div class="row">
    <div class="twelve columns">
      <Table id="tsn_jobTitle_results">
        <THEAD>
          <tr>
            <th>Skill Title</th>
            <th>Skill Relevance</th>
          </tr>
        </THEAD>
        <TBODY>
          {{#each result}}
          <tr>
            <td>{{SkillsName}}</td>
            <td>{{SkillsRelevance}}</td>>
          </tr>
          {{/each}}
        </TBODY>
      </Table>
    </div>
  </div>
  <div class="row">
    <div class="twelve columns">
      <button type="button" class="button-primary">Download as PDF</button>
    </div>
  </div>
</div>
{{/if}}

